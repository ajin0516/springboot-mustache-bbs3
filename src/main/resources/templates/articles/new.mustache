{{> layouts/header}}
<form action="/articles/post" class="container" method="post">
    <div class="mb-3">
        <label class="form-label">title</label>
        <input type="text" class="form-control" name="title" placeholder="제목">
    </div>
    <div class="mb-3">
        <label class="form-label">content</label>
        <textarea class="form-control" name="content" rows="5" placeholder="내용"></textarea>
    </div>
    <button type="submit" class="btn btn-primary"> Submit </button>
    <a href="/articles" class="btn btn-info">목록</a>
</form>
